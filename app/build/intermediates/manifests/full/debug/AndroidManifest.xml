<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ude.palaver_mse"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Palaver"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.ude.palaver_mse.MainActivity" >
            android:label="Palaver">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ude.palaver_mse.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.example.ude.palaver_mse.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.example.ude.palaver_mse.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name="com.example.ude.palaver_mse.chatOverviewActivity" />
        <activity android:name="com.example.ude.palaver_mse.ChatWindow" />
        <activity android:name="com.example.ude.palaver_mse.chat" />
        <activity android:name="com.example.ude.palaver_mse.test" />
        <activity android:name="com.example.ude.palaver_mse.ChatActivity" />
        <activity android:name="com.example.ude.palaver_mse.AddContactActivity" />
    </application>

</manifest>